export const selfInfoUrl = () => {
  return "<%= Rails.application.routes.url_helpers.self_info_path %>";
};

export const loadResultUrl = id => {
  const event_id = id.eventId;
  const competition_id = id.competitionId;
  return `<%= URI.decode(Rails.application.routes.url_helpers.show_result_path("${event_id}", "${competition_id}", format: :json)) %>`;
};

