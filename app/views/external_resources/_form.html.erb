
<%= simple_form_for(@external_resource) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :link %>
    <%= f.input :description %>
    <%= f.input :img %>
    <%= f.label :rank, 'Placer ' %>
    <%= f.select :rank, @existing_resources, {disabled: @external_resource.rank + 1} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
