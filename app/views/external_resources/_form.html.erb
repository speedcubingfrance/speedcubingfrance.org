
<%= simple_form_for(@external_resource) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :link %>
    <%= f.input :description %>
    <%= f.input :img %>
    <% if @external_resource.rank.present? %>
      <%= f.input :rank %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
