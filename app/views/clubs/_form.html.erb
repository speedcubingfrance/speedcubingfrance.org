
<%= simple_form_for(@club) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nom' %>
    <%= f.input :website, label: 'Site internet' %>
    <%= f.input :email %>
    <%= f.input :description %>
    <%= f.input :logo %>
    <%= f.association :department, collection: Department.order(:code), label: ("Département (#{link_to 'Ajouter un département', new_department_path})").html_safe, :label_method => lambda { |dep| "#{dep.code} #{dep.name} (#{dep.region.name})" } %>
        <%= link_to 'Ajouter un élément', new_club_path %>
    <%= f.input :city, label: 'Ville' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
