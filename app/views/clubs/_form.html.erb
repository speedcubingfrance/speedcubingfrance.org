    <%= f.input :email %>
    <%= f.input :description %>
    <%= f.input :logo %>
    <%= f.association :department, collection: Department.c_all_by_id.values.sort_by(&:code), label: ("DÃ©partement"), :label_method => lambda { |dep| "#{dep.code} #{dep.name} (#{dep.region.name})" } %>
