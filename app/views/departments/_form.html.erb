
<%= simple_form_for(@department) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name, label: 'Nom' %>
    <%= f.association :region, collection: Region.order(:name), label: ("Région (#{link_to 'Ajouter une région', new_region_path})").html_safe %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
