<%
  default_active = case params[:controller]
                   when "users", "subscriptions"
                     "association"
                   when "competitions"
                     "speedcubing"
                   else
                     "home"
                   end
  section = yield(:active_section)
  if section.blank?
    section = default_active
  end
%>
<header>
  <nav class="navbar navbar-expand-sm navbar-light">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to(image_pack_tag("media/images/Logo_AFS_Seul.svg", class: "brand-logo"), root_path) %>
        <div class="brand-header">
          <div class="brand-name">
            <%= link_to root_path do %>
              <span class="blue d-none d-md-block">Association Française de Speedcubing</span>
              <span class="blue d-md-none">AFS</span>
            <% end %>
          </div>
          <div class="brand-social">
            <a href="https://www.facebook.com/AFspeedcubing/" target="_blank" title="Facebook">
              <i class="fa fa-facebook-official"></i>
            </a>
            <a href="https://www.twitch.tv/afspeedcubing" target="_blank" title="Twitch">
              <i class="fa fa-twitch"></i>
            </a>
            <a href="https://github.com/speedcubingfrance/speedcubingfrance.org" target="_blank" title="Github">
              <i class="fa fa-github"></i>
            </a>
            <a href="https://www.youtube.com/channel/UCMF--vJOazE3p26jcRnFHkg" target="_blank" title="Youtube">
              <i class="fa fa-youtube"></i>
            </a>
            <a href="https://www.youtube.com/channel/UCycidVUvhFBlq_s47LjTFOQ" target="_blank" title="Youtube (reuploads twitch & cie)">
              <i class="fa fa-youtube"></i>
            </a>
            <a href="https://www.instagram.com/afspeedcubing/" target="_blank" title="Instagram">
              <i class="fa fa-instagram"></i>
            </a>
          </div>
        </div>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-afs" aria-controls="navbar-afs" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="navbar-container w-100">
        <div id="navbar-afs" class="collapse navbar-collapse justify-content-sm-center rounded">
          <ul class="navbar-nav">
            <li class="nav-item">
              <% active = section == "home" ? "active" : nil %>
              <%= link_to root_url, class: "nav-link nav-home #{active}" do %>
                <i class="fa fa-home"></i> <span class="d-sm-none d-lg-inline">Accueil</span>
              <% end %>
            </li>
            <li class="nav-item dropdown">
              <% active = section == "association" ? "active" : nil %>
              <a class="nav-link nav-association dropdown-toggle <%= active %>" id="dropdown-association" role="button" data-toggle="dropdown" data-hover="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                <i class="fa fa-info-circle"></i> <span class="d-sm-none d-lg-inline">Association</span>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown-association">
                <%= link_to "Présentation", page_path("association"), class: "dropdown-item" %>
                <%= link_to "Adhésions", page_path("association/adhesion"), class: "dropdown-item" %>
                <%= link_to "Documents", page_path("association/documents"), class: "dropdown-item" %>
                <%= link_to "Logo", page_path("association/logo"), class: "dropdown-item" %>
              </div>
            </li>
            <li class="nav-item dropdown">
              <% active = section == "speedcubing" ? "active" : nil %>
              <a class="nav-link nav-speedcubing dropdown-toggle <%= active %>" href="#" id="dropdown-speedcubing" role="button" data-toggle="dropdown" data-hover="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-cubes"></i> <span class="d-sm-none d-lg-inline">Speedcubing</span>
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdown-speedcubing">
                <%= link_to "Présentation de la discipline", page_path("speedcubing"), class: "dropdown-item" %>
                <%= link_to "Compétitions", page_path("competitions"), class: "dropdown-item" %>
                <%= link_to "Compétitions en ligne", online_competitions_path, class: "dropdown-item" %>
                <%= link_to "Règlement", page_path("speedcubing/reglement"), class: "dropdown-item" %>
                <%= link_to "Tutoriels", page_path("speedcubing/tutos"), class: "dropdown-item" %>
                <%= link_to "Clubs et associations locales", page_path("clubs"), class: "dropdown-item" %>
                <%= link_to "Ressources externes", page_path("ressources"), class: "dropdown-item" %>
              </div>
            </li>
            <li class="nav-item">
              <% active = section == "contact" ? "active" : nil %>
              <%= link_to page_path("contact"), class: "nav-link nav-contact #{active}" do %>
                <i class="fa fa-envelope"></i> <span class="d-sm-none d-lg-inline">Contact</span>
              <% end %>
            </li>
            <% if current_user %>
              <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" data-hover="dropdown">
                  <div class="avatar-thumbnail "
                       style="background-image: url(<%= current_user.avatar_thumb_url %>);"
                       ></div>
                  <span class="caret"></span>
                </a>
                <div class="dropdown-menu" role="menu">
                  <h6 role="presentation" class="dropdown-header">
                    <%= current_user.name %>
                  </h6>
                  <%= link_to "Votre profil", profile_path, class: "dropdown-item" %>
                  <% if has_manage_competitions_scope %>
                    <%= link_to "Mes compétitions", my_competitions_path, class: "dropdown-item" %>
                  <% end %>
                  <% if current_user.admin? || current_user.comm? %>
                    <div class="dropdown-divider"></div>
                    <h6 role="presentation" class="dropdown-header">
                      Administration
                    </h6>
                    <% if current_user.can_manage_communication_matters? %>
                      <%= link_to "Adhésions", subscriptions_path, class: "dropdown-item" %>
                    <% end %>
                    <% if current_user.admin? %>
                      <%= link_to "Utilisateurs", users_path, class: "dropdown-item" %>
                    <% end %>
                    <%= link_to "Posts", news_index_path, class: "dropdown-item" %>
                    <%= link_to "Compétitions", upcoming_champs_path, class: "dropdown-item" %>
                  <% end %>
                  <% if current_user.admin? || current_user.french_delegate? %>
                    <div class="dropdown-divider"></div>
                    <h6 role="presentation" class="dropdown-header">
                      Délégués
                    </h6>
                    <%= link_to "Matériel", hardwares_path, class: "dropdown-item" %>
                  <% end %>

                  <div class="dropdown-divider"></div>
                  <%= link_to "Déconnexion", signout_path, class: "dropdown-item" %>
                </div>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to signin_path, class: "signin-elem nav-link nav-signin" do %>
                  <span class="d-sm-none d-md-inline">Connexion</span>
                  <span class="d-none d-sm-inline d-md-none"><i class="fa fa-sign-in"></i></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
